<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Controleur type d'urlMapping : org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping -->

	<bean id="homePageController"
		class="com.tfarmel.tfarmelspringmvc.controller.HomePageController">
		<property name="employeManager" ref="employeManager"></property>
	</bean>

	<bean id="urlMapping"
		class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping">
	</bean>

	<bean name="/home.html"
		class="com.tfarmel.tfarmelspringmvc.controller.HomePageController">
		<property name="employeManager" ref="employeManager" />
	</bean>

	<!-- View Resolver : Toutes les vues sont des JSP -->

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix">
			<value>/WEB-INF/jsp/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>

</beans>